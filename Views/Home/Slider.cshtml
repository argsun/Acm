@model IEnumerable<DataLayer1.Page>

<div class="news-slider border-radius clearfix">
    <div id="slider-one" class="owl-carousel">
        @foreach (var item in Model)
        {
            <div class="item">
                <img src="/PageImages/@item.ImageCaption">
                <div class="left-side">
                    <h2> <a href="/News/@item.PageID">@item.Title</a> </h2>
                    <p >
                        @item.ShowDescription
                    </p>
                    <span> <i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi()</span>
                </div>
                @*<div class="clearfix"></div>*@
            </div>

        }

    </div>
    <a href="/Archive" class="news-archive"> <i class="icons icon-doc-1"></i> آرشیو کامل خبرها </a>
</div>
<!-- End slider -->
