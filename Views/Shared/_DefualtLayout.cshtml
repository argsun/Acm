@using System.ServiceModel.Security.Tokens
@using System.Web.UI.WebControls
<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> سایت خبری علی آقا </title>
    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <script src="/Content/js/jquery.min.js"></script>

</head>
<body>
    <script src="/Content/js/modernizr.js"></script>

    <!-- Top Menu -->
    <div class="top-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-5">
                    <ul>
                        <li><a href="/"><i class="fa fa-home"></i></a></li>
                        <li><a href="tel:09123855505"><i class="fa fa-phone-square"></i></a></li>
                        <li><a href="sms:09123855505"><i class="fa fa-mobile-phone"></i></a></li>
                        <li><a href="mailto:a.haddadi@goole.com"><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-7">
                    <span> امروز: @DateTime.Now.ToShamsi()</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <!-- header -->
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <a href="" class="logo"><img src="/Content/img/logo.png" alt="" title="" style="max-height: 61px"></a>
                    <div class="left-side">
                        <h1><a href="">سایت خبری علی آقا حدادی</a></h1>
                        <h2>پایگاه اطلاع رسانی خبری</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span id="er"></span>
                    <form action="/Search" method="get" class="border-radius">
                        <input class="border-radius" type="text" id="myMessage" name="q" placeholder=" جستجو کنید ... ">
                        <button id="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- menu -->
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li><a href="/Archive"> آرشیو اخبار </a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href=""> @User.Identity.Name به سایت خوش آمدید  </a></li>
                    <li><a href="/Account/Signout"> خروج از سایت </a></li>
                }
                else
                {
                    <li><a href="/Account/Login"> ورود به سایت </a></li>
                }
                <li>

                    @Html.Action("ShowGroupInMenu", "News")

                </li>
            </ul>
        </div>
    </nav>
    <!-- End menu -->

    <div class="container margin-top-30">
        <div class="row">

            <aside class="col-md-5 col-sm-12 col-xs-12 pull-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <section class="category-section border-radius">
                        <header><i class="fa fa-user-o"></i> <h3>دسترسی های مدیریت سایت </h3></header>
                        <ul>
                            <li>
                                <a href="/Admin/PageGroups">مدیریت گروه های خبری</a>
                            </li>
                            <li>
                                <a href="/Admin/Pages">مدیریت خبرها</a>
                            </li>
                        </ul>
                    </section>
                }
                @Html.Action("ShowGroups", "News")
                <!-- most views news -->

                @Html.Action("TopNews", "News")

                <!-- end most views news -->
            </aside>


            <div class="col-md-7 col-sm-12 col-xs-12 " id="Mainbody">
                @RenderBody()


            </div>


        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <section class="access-links">
                        <header> دسترسی سریع </header>
                        <ul>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                            <li><a href=""> پیوندهای سایت </a></li>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                        </ul>
                    </section>
                </div>
                <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="socials">
                        <span> شبکه های اجتماعی  سایت</span>
                        <a href=""><i class="fa fa-facebook"></i></a>
                        <a href=""><i class="fa fa-twitter"></i></a>
                        <a href=""><i class="fa fa-paper-plane"></i></a>
                        <a href=""><i class="fa fa-google-plus"></i></a>
                        <div class="clearfix"></div>
                    </div>
                    <p>
                        تمامی حقوق مادی و معنوی این طرح متعلق به علی حدادی می باشد و کپی برداری از این طرح غیر اخلاقی می باشد.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/script.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    @RenderSection("Scripts", false)
    <script>
        $('#submit').click(function () {

            $('form').submit(function (e) {
                if (!$('#myMessage').val()) {
                    alert('هیچ عبارتی برای جستجو وارد نشده است');
                    e.preventDefault();
                }
            });


        });
    </script>
</body>
</html>